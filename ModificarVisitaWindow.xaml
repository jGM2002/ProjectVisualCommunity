<Window x:Class="proyecto.ModificarVisitaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:proyecto"
        mc:Ignorable="d"
        Title="ModificarVisitaWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <Label Content="Pacient: "/>
            <TextBox x:Name="txtPacient"/>
            <Label Content="Data de la Visita: " />
            <TextBox x:Name="txtDataVisita"/>
            <Label Content="Motiu: "/>
            <TextBox x:Name="txtMotiu"/>
            <Button Content="Aplicar Canvis" Click="AplicarCanvis_Click" />
        </StackPanel>
    </Grid>
</Window>
